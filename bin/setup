#!/usr/bin/env ruby
# frozen_string_literal: true

require 'fileutils'

# path to your application root.
APP_ROOT = File.expand_path('..', __dir__)

def system!(*)
  system(*, exception: true)
end

FileUtils.chdir APP_ROOT do
  # This script is a way to set up or update your development environment automatically.
  # This script is idempotent, so that you can run it at any time and get an expectable outcome.
  # Add necessary setup steps to this file.

  puts "\n== Verifying Ruby version =="
  ruby_version = File.read('.ruby-version').strip
  unless RUBY_VERSION.start_with?(ruby_version)
    abort "Ruby version #{RUBY_VERSION} does not match required version #{ruby_version}"
  end

  puts '== Installing dependencies =='
  system! 'gem install bundler --conservative'
  system('bundle check') || system!('bundle install')

  # puts "\n== Copying sample files =="
  # unless File.exist?('config/database.yml')
  #   FileUtils.cp 'config/database.yml.sample', 'config/database.yml'
  # end

  puts "\n== Verifying Node.js dependencies =="
  system! 'node -v'
  system! 'yarn -v'

  puts "\n== Installing JavaScript dependencies =="
  # For React (public facing pages)
  system! 'yarn install'
  system! 'bin/rails javascript:install:esbuild'

  # For Shakapacker (React compilation)
  system! 'bin/shakapacker'

  # For Turbo/Stimulus (admin panel)
  system! 'rails turbo:install'
  system! 'rails stimulus:install'

  puts "\n== Preparing database =="
  system! 'bin/rails db:prepare'

  puts "\n== Removing old logs and tempfiles =="
  system! 'bin/rails log:clear tmp:clear'

  puts "\n== Building JavaScript assets =="
  # Build esbuild assets for admin
  system! 'yarn build'
  # Build React components for development
  system! 'RAILS_ENV=development bin/shakapacker'
  # Build React components for testing
  system! 'RAILS_ENV=test bin/shakapacker'

  puts "\n== Running test suite to verify setup =="
  system! 'bundle exec rspec'

  puts "\n== Verifying Rails environment =="
  system! 'bin/rails about'
  system! 'bin/rails stats'

  puts "\n== Restarting application server =="
  system! 'bin/rails restart'
end
