        "@tailwindcss/line-clamp": "^0.4.2",
        "@tailwindcss/typography": "^0.5.8",
        "autoprefixer": "^10.2.6",
        "babel-loader": "^9.1.0",
        "babel-plugin-dynamic-import-node": "^2.3.3",
        "babel-plugin-macros": "^3.1.0",
        "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
        "bootstrap": "^5.2.3",
        "bootstrap-icons": "^1.10.4",
        "css-loader": "^6.7.2",
        "dayjs": "^1.10.7",
